generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        Int      @id @default(autoincrement())
  username  String
  score     Int      @default(0)
  sessionId Int
  session   Session  @relation(fields: [sessionId], references: [id])
}

model Session {
  id          Int      @id @default(autoincrement())
  sessionCode String   @unique
  master      String
  inProgress  Boolean  @default(false)
  question    String?
  answer      String?
  players     Player[]
}